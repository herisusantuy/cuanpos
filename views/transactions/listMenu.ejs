    <h2>List Menu</h2>
    <table class="table">
        <thead style="text-align:center">
            <tr>
                <th scope="col">No</th>
                <th scope="col">Menue</th>
                <th scope="col">Price</th>
                <!-- <th scope="col">Price</th> -->
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody style="text-align:center">
            <%menus[1].forEach((menu,index)=>{%>
            <tr>
                <td>
                    <%=index+1%>
                </td>
                <td>
                    <%=menu.name%>
                </td>
                <td>
                    <%=formatUang(menu.price)%>
                </td>
                <td>
                    <form action="/order/add/<%= menu.id %>" method="post" style="display:inline">
                        <input type="number" name="qty">
                        <button type="submit" class="btn btn-primary">Order</button>
                    </form>
                </td>
            </tr>
            <%})%>
        </tbody>
    </table>
    <h2>Orders</h2>
    <table class="table">
        <thead style="text-align:center">
            <tr>
                <th scope="col">Qty</th>
                <th scope="col">Name</th>
                <th scope="col">Sub Total</th>
                <!-- <th scope="col">Price</th> -->
                <!-- <th scope="col">Options</th> -->
            </tr>
        </thead>
        <tbody style="text-align:center">
            <%menus[0].Items.forEach((item,index)=>{%>
            <tr>
                <td>
                    <%=item.Order.qty%>
                </td>
                <td>
                    <%=item.name%>
                </td>
                <td>
                    <%=formatUang(item.price * item.Order.qty)%>
                </td>
            </tr>
            <%})%>
            <tr>
                <td></td>
                <td>PPN</td>
            </tr>
        </tbody>
    </table>


