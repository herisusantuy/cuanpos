    <h2>Add New Operator</h2>
    <br>
    <form action="/user/add" method="post">

      <div class="form-group">
        <label for="name">Name: </label>
        <input type="text" name="name" class="form-control" aria-describedby="emailHelp" placeholder="Enter Operator Name"
          value="">
      </div>
      <div class="form-group">
        <label for="stock">Password: </label>
        <input type="password" name="password" class="form-control" aria-describedby="passwordHelp" placeholder="Enter Operator Password"
          value="">
      </div>
      <div class="form-group">
        <label for="stock">Role: </label>
        <select name="role" class="form-control">
          <option value="">--- None ---</option>
          <option value="manager">Manager</option>
          <option value="server">Server</option>
          <option value="cashier">Cashier</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Add Operator</button>


    </form>

    <br>
    <br>
    <h2>List Robot</h2>
    <table class="table">
      <thead style="text-align:center">
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Stock</th>
          <th scope="col">Price</th>
          <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody style="text-align:center">

        <tr scope="row">
          <td>1</td>
          <td>213123</td>
          <td>0</td>
          <td>$ 0</td>
          <td>
            <form action="/robots/buy/51" method="post" style="display:inline">
              <input type="number" name="stock">
              <button type="submit" class="btn btn-primary">Buy</button>
            </form>
            <form action="/robots/produce/51" method="post" style="display:inline">
              <input type="number" name="stock">
              <button type="submit" class="btn btn-primary">Produce</button>
            </form>
          </td>
        </tr>



      </tbody>
    </table>

  </div>
